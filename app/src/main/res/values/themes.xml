<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Seloustev" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_800</item>
        <item name="colorPrimaryVariant">@color/cyan_800_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_800</item>
        <item name="colorSecondaryVariant">@color/cyan_800_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cyan_800_light</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline5">@style/TextHeadline5</item>
        <item name="imageButtonStyle">@style/CustomImageButton</item>
    </style>

    <style name="TextHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/button_background</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
    </style>
</resources>